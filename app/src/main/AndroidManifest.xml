<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vinicius.rpg">

    <application
        android:allowBackup="true"
        android:icon="@drawable/sigmund"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NovoJogo" />
        <activity android:name=".Jogo" />
        <activity android:name=".Continuar" />
        <activity android:name=".Dungeon"
                  android:launchMode="singleTask" />
        <activity android:name=".Battle" />
        <activity android:name=".PersonagemMenu" />
    </application>

</manifest>